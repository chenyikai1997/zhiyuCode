.project-container {
  padding: 0.625rem 0.5rem;
  margin: 0 auto;
  margin-top: 0.625rem;
  width: 90%;
  background-image: url(../images/map-bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  color: #fff;
  font-size: 0.25rem;
  box-sizing: border-box;
}
.project-container .project-name {
  font-size: 0.325rem;
  font-weight: 500;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
}
.project-container .project-intro {
  margin-top: 0.375rem;
  text-indent: 2em;
  font-size: 0.225rem;
  letter-spacing: 2px;
  line-height: 0.375rem;
}
.project-container .monitor-list {
  padding: 0.375rem 0;
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  overflow: hidden;
  overflow-x: auto;
  box-sizing: border-box;
}
.project-container .monitor-list .item {
  margin: 0 0.125rem;
  width: 5rem;
}
.project-container .monitor-list::-webkit-scrollbar {
  width: 0.05rem;
  background-color: #0959e235;
}
.project-container .monitor-list::-webkit-scrollbar-thumb {
  background-color: #0959e2ac;
}
.project-container .shuiwei-chart {
  margin-top: 0.5rem;
  width: 100%;
}
.project-container .shuiwei-chart .title {
  padding: 0.125rem 0 0.125rem 0.1875rem;
  width: 20%;
  background-image: url(../images/title-bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-size: 0.25rem;
  box-sizing: border-box;
}
.project-container .shuiwei-chart #shuiwei-chart {
  margin-top: 0.25rem;
  width: 100%;
  height: 3.75rem;
}
.project-container .yinhuan-charts {
  margin-top: 0.5rem;
  width: 100%;
}
.project-container .yinhuan-charts .title {
  padding: 0.125rem 0 0.125rem 0.1875rem;
  width: 20%;
  background-image: url(../images/title-bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-size: 0.25rem;
  box-sizing: border-box;
}
.project-container .yinhuan-charts .yinhuan-chart {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.project-container .yinhuan-charts .yinhuan-chart #yinhuan-pie {
  width: 45%;
  height: 5rem;
}
.project-container .yinhuan-charts .yinhuan-chart #zhenggai-percent {
  width: 45%;
  height: 5rem;
}
.project-container .yinhuan-charts .yinhuan-form {
  position: relative;
  margin: 0 auto;
  width: 18.75rem;
  overflow: auto;
  color: #222;
  border: 1px solid #fff;
}
.project-container .yinhuan-charts .yinhuan-form table {
  width: 18.75rem;
  background-color: #cbfcff;
  border-collapse: collapse;
  white-space: nowrap;
  border: 1px solid #fff;
}
.project-container .yinhuan-charts .yinhuan-form table thead {
  text-align: center;
}
.project-container .yinhuan-charts .yinhuan-form table thead th {
  border: 1px solid #fff;
  font-weight: 400;
  padding: 0.1875rem 0.25rem;
  box-sizing: border-box;
  position: sticky;
  top: -1px;
  background-color: #00b0f0c9;
  color: #fff;
}
.project-container .yinhuan-charts .yinhuan-form table tbody {
  text-align: center;
}
.project-container .yinhuan-charts .yinhuan-form table tbody td {
  padding: 0.125rem;
  border: 1px solid #fff;
}
.project-container .yinhuan-charts .yinhuan-form::-webkit-scrollbar {
  width: 0.05rem;
  background-color: #0959e235;
}
.project-container .yinhuan-charts .yinhuan-form::-webkit-scrollbar-thumb {
  background-color: #0959e2ac;
}
