  html{
    overflow-y: hidden;
    width: 100%;
    height: 100%;
    padding-bottom: .125rem;
  }

  /* 1.父容器大盒子 */
  .viewpoint{
    min-width: 1024px;
    max-width: 3066px;
    margin: 0 auto;
    padding-bottom: .125rem;
    background-size: cover;
    /* padding: 3.125rem .5rem 0 .5rem;
    background: url(../images/topheadNew.png) no-repeat;
    background-size: contain; */
    min-height: 780px;
  }

  /* 顶部Tab开始 */
  .head{
    height: 1.12rem;
    margin-bottom: .1875rem;
    background-image: url(../images/topheadNew.png);
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    }

    .head h1{
        margin-top: .15rem;
        margin-bottom: .075rem;
        display: flex;
        justify-content: center;
        color: #fff;
        font-size: .375rem;
    }

    .head ul{
        display: flex;
        justify-content: center;
        margin: 0;
        
    }

    .head ul a{
        float: left;
        width: 1.625rem;
        text-align: center;
        font-size: .2rem;
        color: #fff;
    }

    .head ul a:hover{
        color: #20bcfc;
    }
  /* 顶部Tab结束 */

  /* 中心盒子开始 */
  .column{
    margin: 0 auto;
    margin-top: 30px;
    width: 22.125rem;
    height: 10.5rem;
    background-image: url(../images/changtaiMsgBox.png);
    background-size: cover;
  }

  .column h2{
    padding-left: .1875rem;
    width: 2.325rem; 
    height: .4625rem; 
    line-height: .4625rem;
    background-image: url(../images/Tabbox2.png); 
    background-size: cover; 
}

.tongzhi{
    margin-top: .125rem;
}

.tongzhi .left{
    display: flex;
    flex-direction: column;
    padding-left: .1875rem;
    width: 7.9375rem;
    height: 9.775rem;
    background-image: url(../images/tongzhiLeftBox.png);
    background-size: cover;
}

.tongzhi .news{
    padding: .25rem;
    margin-top: .375rem;
    border-bottom: .0125rem solid #0068ff;
}

.tongzhi .dongtaiList a{
    display: block;
    overflow: hidden;
    height: .475rem;
    line-height: .475rem;
    font-size: .15rem;
}

.tongzhi .dongtaiList .btn{
    text-align: center;
}

.btn button{
    margin-right: .1875rem;
    width: 1rem;
    height: .3125rem;
    color: #fff;
    background-color: #023197;
    border-radius: 4px;
    border: none;
}

.tongzhi .right{
    display: flex;
    flex-direction: column;
    padding-left: .25rem;
    width: 13.25rem;
    height: 9.775rem;
    background-image: url(../images/tongzhiRightBox.png);
    background-size: cover;
}

.tongzhi .right h4{
    margin-bottom: .1875rem;
    height: .3625rem;
    line-height: .3625rem;
}

.danganTab{
    display: flex;
    justify-content: space-around;
}

.danganTab a{
    padding-top: .225rem;
    text-align: center;
}

.danganTab a:hover{
    transition: all .8s;
    transform: scale(1.3);
}

.danganTab a img{
    margin-bottom: .6rem;
    width: .55rem;
    height: .55rem;
}

.danganActive{
    width: 1.1375rem;
    height: 1.2125rem;
    background-image: url(../images/danganBoxHover.png);
    background-size: cover;
}

.danganList li{
    display: flex;
    justify-content: space-between;
    padding:0 .25rem;
    height: .6rem;
    font-size: .15rem;
    line-height: .6rem;
    color: #fff;
}

.look{
    width: .75rem;
    height: .2875rem;
    border: 1px solid #fff;
    border-radius: 11px;
    color: #fff;
    background-color: rgba(0,0,0,0);
}

.download{
    width: .75rem;
    height: .2875rem;
    border: 1px solid #03c115;
    border-radius: 11px;
    color: #03c115;
    background-color: rgba(0,0,0,0);
}
  /* 中心盒子结束 */