body {
  position: relative;
  height: 100vh;
  background-image: url(../img/login-bg.jpg);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
header {
  margin-bottom: 6.25rem;
  padding: 0.875rem 0 0.375rem 0;
  width: 100%;
  height: 3rem;
  box-sizing: border-box;
  background-color: #fff;
}
header .container {
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
}
header .container img {
  margin-right: 0.1875rem;
  width: 1.25rem;
}
header .container span {
  font-size: 1rem;
}
.login {
  padding: 1.25rem 0 2rem 0;
  margin: 0 auto;
  width: 80%;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 0 4px 4px rgba(253, 253, 253, 0.254);
}
.login .system-name {
  margin-bottom: 1.875rem;
  width: 100%;
}
.login .system-name .container {
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90%;
}
.login .system-name .container img {
  margin-bottom: 1.25rem;
  margin-right: 0.375rem;
  width: 4.5rem;
}
.login .system-name .container span {
  display: inline-block;
  font-size: 1.375rem;
  color: #0724a7cc;
}
.login form {
  padding: 0.5rem 0;
  box-sizing: border-box;
}
.login form .account {
  margin: 0 auto;
  margin-bottom: 1.25rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 85%;
  background-color: #fff;
  box-sizing: border-box;
}
.login form .account img {
  margin-bottom: 0.125rem;
  width: 1.125rem;
}
.login form .account #username {
  padding: 0.5rem 0.25rem;
  width: 100%;
  border: none;
  box-sizing: border-box;
  outline: none;
  border-bottom: 1px solid #0724a72e;
}
.login form .password {
  margin: 0 auto;
  margin-bottom: 3.75rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 85%;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 8px;
}
.login form .password img {
  width: 1.125rem;
}
.login form .password .box {
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #0724a72e;
}
.login form .password .box #userpassword {
  padding: 0.5rem 0.25rem;
  width: 100%;
  border: none;
  box-sizing: border-box;
  outline: none;
}
.login form .password .box img {
  width: 1.125rem;
  height: 1.125rem;
}
.login form .submit {
  margin: 0 auto;
  width: 75%;
}
.login form .submit #login-btn {
  width: 100%;
  height: 2.5rem;
  border-radius: 8px;
  border: none;
  color: #fff;
  background-color: #0725a7;
  border: 1px solid #4766f16e;
}
footer .container {
  position: fixed;
  left: 10%;
  bottom: 2%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80%;
  color: #fff;
}
footer .container img {
  margin-right: 0.25rem;
  width: 3rem;
}
footer .container span {
  font-size: 0.125rem;
}
