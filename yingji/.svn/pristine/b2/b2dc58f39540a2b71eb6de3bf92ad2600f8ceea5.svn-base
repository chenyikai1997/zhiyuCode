/*清除元素默认的内外边距  */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  /*让所有斜体 不倾斜*/
  em,
  i {
    font-style: normal;
  }
  /*去掉列表前面的小点*/
  li {
    list-style: none;
  }
  /*图片没有边框   去掉图片底侧的空白缝隙*/
  img {
    border: 0; /*ie6*/
    vertical-align: middle;
  }
  /*让button 按钮 变成小手*/
  button {
    cursor: pointer;
  }
  /*取消链接的下划线*/
  a {
    color: #fff;
    text-decoration: none;
  }
  
  a:hover {
    color: #e33333;
  }

  p{
    font-size: .15rem;
  }

  h1,h2,h3,h4,p{
    color: #fff;
  }
  h3{
    font-size: .2rem;
  }
  h4 {
    font-size: .175rem;
    font-weight: 400;
  }
  body {
    background: url(../images/background.png) no-repeat;
    background-size: 100% 100%;
  }
