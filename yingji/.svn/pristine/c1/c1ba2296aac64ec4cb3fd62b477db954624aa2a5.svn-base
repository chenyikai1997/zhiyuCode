  html{
    overflow-y: hidden;
    width: 100%;
    height: 100%;
    padding-bottom: .125rem;
  }

  /* 1.父容器大盒子 */
  .viewpoint{
    min-width: 1024px;
    max-width: 3066px;
    margin: 0 auto;
    padding-bottom: .125rem;
    background-size: cover;
    /* padding: 3.125rem .5rem 0 .5rem;
    background: url(../images/topheadNew.png) no-repeat;
    background-size: contain; */
    min-height: 780px;
  }

  /* 顶部Tab开始 */
  .head{
    height: 1.12rem;
    margin-bottom: .1875rem;
    background-image: url(../images/topheadNew.png);
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    }

    .head h1{
        margin-top: .15rem;
        margin-bottom: .075rem;
        display: flex;
        justify-content: center;
        color: #fff;
        font-size: .375rem;
    }

    .head ul{
        display: flex;
        justify-content: center;
        margin: 0;
        
    }

    .head ul a{
        float: left;
        width: 1.625rem;
        text-align: center;
        font-size: .2rem;
        color: #fff;
    }

    .head ul a:hover{
        color: #20bcfc;
    }
  /* 顶部Tab结束 */


  /* 中心盒子开始 */
  .column{
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    margin-top: .5rem;
    width: 22.125rem;
    height: 10.25rem;
    background-image: url(../images/yingjigongchengBox.png);
    background-size: cover;
  }

  .yingjiMsg{
    overflow-y: auto;
    padding: .25rem;
  }

  .yingjiMsg::-webkit-scrollbar{
    -webkit-appearance: none;
}

.yingjiMsg::-webkit-scrollbar-thumb{
    background-color: #006cff;
}

.yingjiMsg::-webkit-scrollbar-track{
    border: 1px solid #006cff;
    background-color: #062d82;
}

.yingjiMsgTitle h3{
  padding-left: .25rem;
  background-image: url(../images/yingjiRedBox.png);
  background-size: cover;
  width: 2.3rem;
  height: 0.4625rem;
  line-height: 0.4625rem;
  font-size: .25rem;
}

.selectDate{
