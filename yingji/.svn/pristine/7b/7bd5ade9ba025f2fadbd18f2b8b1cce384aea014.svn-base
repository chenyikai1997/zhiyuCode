body {
  overflow: hidden;
  position: relative;
  width: 100%;
  height: 100vh;
  background-image: url(../images/background.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
header {
  width: 100%;
  height: 0.5rem;
  background-image: url(../images/fengxian_header.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
header .container {
  margin: 0 auto;
  width: 80%;
  height: 100%;
}
header .container .title {
  color: #fff;
  font-size: 0.425rem;
  text-align: center;
}
header .container .nav-list {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100%;
}
header .container .nav-list a {
  position: relative;
  padding: 0.25rem 0;
  margin-right: 1rem;
  display: inline-block;
  font-size: 0.25rem;
  color: #fff;
  transition: all 0.4s;
}
header .container .nav-list .active::after {
  content: '';
  position: absolute;
  left: 25%;
  bottom: 0;
  width: 50%;
  height: 5px;
  background-image: url(../images/nav-active.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
header .container .nav-list::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25.5%;
  width: 50%;
  height: 5px;
  background-image: url(../images/nav-after.png);
  background-size: 100% 100%;
}
header .container .nav-list a:last-child {
  margin-right: 0;
}
.subContainer {
  padding: 1rem 1.875rem 0.5rem 1.875rem;
  margin: 0 auto;
  margin-top: 1rem;
  position: relative;
  width: 21.25rem;
  height: 83vh;
  background-image: url(../images/subPage-bg.png);
  background-size: 100% 100%;
  color: #fff;
  box-sizing: border-box;
}
.subContainer .mainTitle {
  position: absolute;
  top: -1%;
  left: 42%;
  padding: 0.125rem 0.9375rem;
  background-image: url(../images/qiXiangXinXi-title.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-size: 0.375rem;
  box-sizing: border-box;
}
